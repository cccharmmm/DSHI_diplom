@page "/tests"
@inherits LayoutComponentBase
@layout Layout.LayoutWithHeaderAndFooter
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject HttpClient Http

<div class="sheet-music-container">
    <h2 class="sheet-music-title" align="center">Тесты</h2>
    <div class="content-wrapper">

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">@errorMessage</div>
        }

        <div class="filter-panel" style="display: flex; flex-direction: column;">
            <div class="filter-category">
                <div class="filter-header">Класс<span class="arrow">▼</span></div>
                <ul class="filter-list">
                    @if (isLoading)
                    {
                        <li>Загрузка...</li>
                    }
                    else if (Classes != null && Classes.Any())
                    {
                        @foreach (var class_ in Classes)
                        {
                            Console.WriteLine($"Class: {class_.Name}");
                            <li>@class_.Name</li>
                        }
                    }
                    else
                    {
                        <li>Нет данных</li>
                    }
                </ul>
            </div>
            <div class="filter-category">
                <div class="filter-header">Предмет<span class="arrow">▼</span></div>
                <ul class="filter-list">
                    @if (isLoading)
                    {
                        <li>Загрузка...</li>
                    }
                    else if (Subjects != null && Subjects.Any())
                    {
                        @foreach (var subject in Subjects)
                        {
                            Console.WriteLine($"Class: {subject.Name}");
                            <li>@subject.Name</li>
                        }
                    }
                    else
                    {
                        <li>Нет данных</li>
                    }
                </ul>
            </div>
        </div>
