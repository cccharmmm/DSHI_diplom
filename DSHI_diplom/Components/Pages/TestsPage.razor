@code {
    private bool isLoading = true;
    private List<Class> Classes = new List<Class>();
    private List<Subject> Subjects = new List<Subject>();
    private string errorMessage = string.Empty;


    protected override async Task OnInitializedAsync()
    {
        try
        {
            Classes = await Http.GetFromJsonAsync<List<Class>>("api/class") ?? new List<Class>();
            Console.WriteLine($"Classes: {Classes?.Count} items");

            Subjects = await Http.GetFromJsonAsync<List<Subject>>("api/subject") ?? new List<Subject>();
            Console.WriteLine($"Subjects: {Subjects?.Count} items");

        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки данных: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}