    </div>
            <ValidationMessage For="@(() => _userProfile.Password)" />
</div>
    <div class="form-group">
        <div class="save-button-container">
            <button class="save-button" @onclick="ConfirmSaveChanges">Сохранить</button>
        </div>
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <p style="text-align: center; margin-top: -30px; color: @messageColor;">@successMessage</p>
        }
        @if (showConfirmationModal && _isFormValid)
        {
                <div class="modal-overlay">
                    <div class="modal-content">
                    <h4>Сохранить изменения?</h4>
                    <div class="modal-buttons">
                            <button id="confirm-save" class="confirm-button" @onclick="SaveChanges">Сохранить</button>
                        <button id="cancel-save" class="cancel-button" @onclick="CancelSave">Отмена</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</EditForm>
