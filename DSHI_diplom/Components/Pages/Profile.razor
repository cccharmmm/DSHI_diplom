@page "/profile"
@inherits LayoutComponentBase
@layout Layout.LayoutWithHeaderAndFooter
@inject NavigationManager Navigation
@rendermode InteractiveServer


<EditForm Model="@_userProfile"  OnInvalidSubmit="HandleInvalidSubmit">
